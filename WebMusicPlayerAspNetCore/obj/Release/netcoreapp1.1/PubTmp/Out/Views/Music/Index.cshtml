
@{ 
    var list = (List<WebMusicPlayerAspNetCore.Helpers.ListOfContents>)ViewBag.Contents;
}

<h2>My Musics <img src="images\musicgif.gif"/><img src="images\musicgif.gif" /><img src="images\musicgif.gif" /></h2>

<div>
    <table class="table table-bordered table-condensed table-striped">
        <thead>
            <tr>
                <td>Music</td>
                <td>Name</td>
                <td>Genero</td>
                <td>Image</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var music in list)
            {
                <tr>
                    <td style="width:100px; padding-top:15px;">
                        <span>
                            <audio controls="controls">
                                <source src="@music.Path" type="audio/mp3" />
                            </audio>
                        </span>
                    </td>
                    <td style="width:550px; padding-top:20px;">
                        @music.Name
                    </td>
                    <td></td>
                    <td style="width:50px;">
                        <img src="images\energy.jpg" height='50' width='50' />
                    </td>
                </tr>
            }         
            
        </tbody>
    </table>
</div>